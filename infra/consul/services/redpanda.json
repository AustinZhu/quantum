{
  "service": {
    "id": "redpanda",
    "name": "redpanda",
    "address": "redpanda",
    "port": 9092,
    "tags": ["infra", "streaming", "kafka"],
    "checks": [
      {
        "id": "redpanda-tcp",
        "name": "Redpanda TCP",
        "tcp": "redpanda:9092",
        "interval": "10s",
        "timeout": "3s"
      },
      {
        "id": "redpanda-http-ready",
        "name": "Redpanda HTTP Ready",
        "http": "http://redpanda:9644/v1/status/ready",
        "interval": "10s",
        "timeout": "3s"
      }
    ]
  }
}
